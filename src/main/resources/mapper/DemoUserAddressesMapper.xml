<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.demo.code.mapper.DemoUserAddressesMapper">
    <!--resultMap 映射-->
    <resultMap id="BaseResultMap" type="com.project.demo.code.domain.DemoUserAddresses">
        <id property="addressId" column="address_id"/>
        <result property="userId" column="user_id"/>
        <result property="receiverName" column="receiver_name"/>
        <result property="phoneNumber" column="phone_number"/>
        <result property="province" column="province"/>
        <result property="city" column="city"/>
        <result property="district" column="district"/>
        <result property="detailedAddress" column="detailed_address"/>
        <result property="postalCode" column="postal_code"/>
        <result property="isDefault" column="is_default"/>
        <result property="deleted" column="deleted"/>
        <result property="version" column="version"/>
        <result property="createDate" column="create_date"/>
        <result property="createBy" column="create_by"/>
        <result property="updateDate" column="update_date"/>
        <result property="updateBy" column="update_by"/>
    </resultMap>

    <sql id="Base_Column_List">
        user_id, receiver_name, phone_number, province, city, district, detailed_address, postal_code, is_default,
        deleted, version, create_date, create_by, update_date, update_by
    </sql>

    <!--分页查询用户收货表-->
    <select id="page" resultType="com.project.demo.code.domain.DemoUserAddresses">
        select
        address_id,
        <include refid="Base_Column_List"/>
        from demo_user_addresses
        where deleted = 1
        <if test="command.receiverName != null and command.receiverName != ''">
            and receiver_name =  #{command.receiverName}
        </if>
        <if test="command.phoneNumber != null and command.phoneNumber != ''">
            and phone_number =  #{command.phoneNumber}
        </if>
        <if test="command.province != null and command.province != ''">
            and province = #{command.province}
        </if>
        <if test="command.city != null and command.city != ''">
            and city = #{command.city}
        </if>
        <if test="command.district != null and command.district != ''">
            and district = #{command.district})
        </if>
        <if test="command.postalCode != null and command.postalCode != ''">
            and postal_code = #{command.postalCode}
        </if>
    </select>

    <!--查询当前用户的收货地址列表-->
    <select id="getUserAddressByUserId" resultType="com.project.demo.code.domain.DemoUserAddresses">
        select
        address_id,
        <include refid="Base_Column_List"/>
        from demo_user_addresses
        where deleted = 1 and user_id = #{userId}
    </select>

    <!--删除用户地址-->
    <update id="deleteUserAddressById">
        update demo_user_addresses
        set deleted = 2
        where address_id = #{command.addressId}
    </update>

    <!--设置用户地址为默认地址-->
    <update id="updateYesDefaultById">
        update demo_user_addresses
        set is_default = 1
        where address_id = #{command.addressId}
          and user_id = #{userId}
    </update>

    <!--将其他的地址设置为非默认地址-->
    <update id="updateNoDefaultById">
        update demo_user_addresses
        set is_default = 0
        where deleted = 1
          and address_id != #{command.addressId}
          and is_default = 1
          and user_id = #{userId}
    </update>

</mapper>
